        <meta charset="UTF-8">
        <title>{% block title %}Welcome to the forum!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="row">
            <div class="col s3 sidebar">
                {% include 'components/sidebar.html.twig' %}
            </div>
            <div class="col s9">
                <div class="container">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
